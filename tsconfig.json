{
  "extends": "./config/tsconfig.base.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "@components/*": [
        "src/components/*"
      ],
      "@containers/*": [
        "src/containers/*"
      ],
      "@pages/*": [
        "src/pages/*"
      ],
      "@services/*": [
        "src/services/*"
      ],
      "@store/*": [
        "src/store/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
      "@res/*": [
        "res/*"
      ],
      "@type/*": [
        "src/types/*"
      ],
      "@mocks/*": [
        "src/__mocks__/*"
      ],
      "@tests/*": [
        "src/__tests__/*"
      ]
    }
  },
  "include": [
    "./res/**/*",
    "./src/**/*",
    "./global.d.ts"
  ]
}